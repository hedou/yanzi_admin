<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.ssh.level.domain.Level" table="Level" dynamic-insert="true" dynamic-update="true">
		<id name="LevelId" column="LevelId">
			<generator class="native"></generator>
		</id>
		<property name="Level" column="Level"></property>
		<property name="Image" column="Image"></property>
		<property name="MinExp" column="MinExp"></property>
		<property name="Coin" column="Coin"></property>
		<property name="Valid" column="Valid"></property>
		<property name="AddTime" column="AddTime"></property>
		<property name="UpdateTime" column="UpdateTime"></property>
		
		<many-to-one name="course" class="com.ssh.course.domain.Course" cascade="save-update"> 
		<column name="CourseId"/>
		</many-to-one>
	</class>
</hibernate-mapping>